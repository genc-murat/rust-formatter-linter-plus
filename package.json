{
  "name": "rust-formatter-linter",
  "displayName": "Rust Formatter and Linter",
  "description": "A comprehensive VS Code extension to format, lint, test, and fix Rust code using cargo fmt, clippy, test, and fix.",
  "version": "0.0.11",
  "publisher": "gencmurat",
  "engines": {
      "vscode": "^1.90.0"
  },
  "categories": [
      "Other"
  ],
  "activationEvents": [
      "onCommand:extension.rustFmt",
      "onCommand:extension.rustClippy",
      "onCommand:extension.rustTest",
      "onCommand:extension.rustFmtFile",
      "onCommand:extension.rustClippyFile",
      "onCommand:extension.editRustfmtConfig",
      "onCommand:extension.editClippyConfig",
      "onCommand:extension.rustFix",
      "onLanguage:rust"
  ],
  "main": "./out/extension.js",
  "contributes": {
      "commands": [
          {
              "command": "extension.rustFmt",
              "title": "Run cargo fmt",
              "category": "Rust"
          },
          {
              "command": "extension.rustClippy",
              "title": "Run cargo clippy",
              "category": "Rust"
          },
          {
              "command": "extension.rustTest",
              "title": "Run cargo test",
              "category": "Rust"
          },
          {
              "command": "extension.rustFmtFile",
              "title": "Format this file with cargo fmt",
              "category": "Rust"
          },
          {
              "command": "extension.rustClippyFile",
              "title": "Lint this file with cargo clippy",
              "category": "Rust"
          },
          {
              "command": "extension.editRustfmtConfig",
              "title": "Edit rustfmt.toml",
              "category": "Rust"
          },
          {
              "command": "extension.editClippyConfig",
              "title": "Edit clippy.toml",
              "category": "Rust"
          },
          {
              "command": "extension.rustFix",
              "title": "Run cargo fix",
              "category": "Rust"
          }
      ],
      "configuration": {
          "type": "object",
          "title": "Rust Formatter and Linter Configuration",
          "properties": {
              "rustFormatterLinter.formatOnSave": {
                  "type": "boolean",
                  "default": true,
                  "description": "Run cargo fmt on save"
              },
              "rustFormatterLinter.testOnSave": {
                  "type": "boolean",
                  "default": false,
                  "description": "Run cargo test on save"
              },
              "rustFormatterLinter.formatArgs": {
                  "type": "array",
                  "default": [],
                  "description": "Additional arguments for cargo fmt"
              },
              "rustFormatterLinter.lintArgs": {
                  "type": "array",
                  "default": [],
                  "description": "Additional arguments for cargo clippy"
              }
          }
      }
  },
  "repository": {
        "type": "git",
        "url": "https://github.com/genc-murat/rust-formatter-linter-plus.git"
    },
  "scripts": {
      "vscode:prepublish": "npm run compile",
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./",
      "pretest": "npm run compile && npm run lint",
      "lint": "eslint src --ext ts",
      "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
